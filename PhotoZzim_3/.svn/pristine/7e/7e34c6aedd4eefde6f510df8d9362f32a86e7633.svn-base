
.upload-container{
    width: 85%;
    margin: 20px auto;
    height: @basicHeight - 60px;
    border-radius: @containerRadius * 2px;
    
    .uploadProgress{
        height : 25px;
        width  : 92%;
        margin : 20px auto;
        background: transparent;
		box-shadow: inset 1px 3px 5px rgba(133, 116, 116, 0.45),1px 3px 2px rgba(133, 116, 116, 0.45);
        border : 1px solid @basicBorderColor;
        border-radius : @containerRadius;
        .bar.unactive{
        	-webkit-transition-duration : 0s;
        }
    }
    .dropbox{
        width: auto;
        height: 80%;
        overflow: hidden;
        overflow-y : scroll;
        margin: 0 30px;
        border-radius: @containerRadius;
        border: 5px dotted #A8382E;
       ul.thumbnails{
           padding : 10px;
           li{
               a.thumbnail{
                    width : @thumbNailSize;
                    height : @thumbNailSize;
                    img{
                        width : @thumbNailSize;
                        height : @thumbNailSize;
                    }
               }
           }
       }
       span.message{
           width: 40%;
            color: gray;
            margin: 210px auto;
            display: block;
            text-align: center;
        }
    }
      div:nth-child(3){
          width: 50%;
		  margin : 10px 30px;
       }    
}
