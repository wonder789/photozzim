.group-container h3{margin:0;color:rgba(165,62,62,0.96);float:left}.group-container ul{margin-right:100px;margin-bottom:0;width:10%}.group-container ul li{float:left;width:40px;margin:0 5px}.group-container ul li a{float:left;width:24px;height:24px;display:inline-block;text-indent:-9999em;padding:7px;background-position:center;border-radius:5px;-webkit-transition-duration:.7s}.group-container ul li a[href*=invite]{background:url('../img/useradd.png') no-repeat center rgba(216,147,141,0.54)}.group-container ul li a[href*=edit]{background:url('../img/edit.png') no-repeat center rgba(216,147,141,0.54)}.group-container ul li a:hover{top:-10px;-webkit-transform:scale(1.1);background-color:#e25959}.group-container ul li a:hover+span{color:#a29292;text-shadow:1px 1px 3px;opacity:1;display:inline-block}.group-container ul li span{position:relative;text-align:center;display:inline-block;width:100%}.group-container #m-container{clear:left}